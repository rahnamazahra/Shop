<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvcshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVCShop">
        <activity
            android:name=".controller.Controller.DetailsProductActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Controller.ProductActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Controller.ListActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Controller.RecyclerViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>